<h1>Eat-A-Burger!</h1>
<h1>Please, Remember to tip your Waitstaff!</h1>
<main>
    <section>
        <h2>Burgers waiting to be devoured!</h2>
        <ul>

            {{#each burgeregrubs}}
            {{#if devoured}}
            {{> burgeregrub/burgeregrub devoured=false}}
            {{/if}}
            {{/each}}
        </ul>
    </section>

    <section>
        <h2>Burgers being digested.</h2>
        <ul>
            {{#each burgeregrubs}}
            {{#unless devoured}}
            {{> burgeregrub/burgeregrub devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>
    </section>
</main>